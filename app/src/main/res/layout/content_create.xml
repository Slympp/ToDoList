<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_create"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_create"
        tools:context="com.todolist.slymp.todolist.CreateActivity" android:layout_below="@+id/content_create"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true" >

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/firstLinear">
    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter a title"
            android:id="@+id/fieldTitle"
            android:ems="10"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/titleTextView" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:id="@+id/descTextView"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/fieldTitle" android:layout_alignStart="@+id/titleTextView"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="Enter a description"
            android:id="@+id/fieldDesc"
            android:lines="4"
            android:maxLines="4"
            android:gravity="left"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/descTextView" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:text="Due-time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/duetimeTextView"
            android:textColor="#000"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/fieldDesc" android:layout_alignStart="@+id/descTextView"/>

    <Button
            android:text="hh:mm dd/MM/yyyy"
            android:id="@+id/dateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="12dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="fill_parent"
                  android:layout_below="@+id/secondLinear"
                  android:id="@+id/thirdLinear"
                  android:gravity="bottom"
                  android:orientation="horizontal">

        <Button
                android:text="Cancel"
                android:layout_height="wrap_content"
                android:id="@+id/cancelCreateButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/duetimeTextView"/>
        <Button
                android:text="Create"
                android:layout_height="wrap_content"
                android:id="@+id/createButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>

    </LinearLayout>

</RelativeLayout>
